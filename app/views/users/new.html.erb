<h2>Sign up</h2>

<div class="row">
   <div class="col-md-8">
     <%= form_for @user do |f| %>
       <div class="form-group">
         <%= f.label :username %>
         <%= f.text_field :username, class: 'form-control', placeholder: "Enter the new Username" %>
       </div>

       <div class="form-group">
         <%= f.label :email %>
         <%= f.text_field :email, rows: 8, class: 'form-control', placeholder: "Enter the new User email" %>
       </div>

       <div class="form-group">
         <%= f.label :password %>
         <%= f.text_field :password, rows: 8, class: 'form-control', placeholder: "Enter the new User password" %>
       </div>

       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
